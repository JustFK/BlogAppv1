@model List<Post>

<div class="row">
    <div class="col-12">
        <h2> Post Listesi</h2>
        <a href="/posts/create" class="btn btn-primary">Yeni Post</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width:125px;">Image</th>
                    <th>Id</th>
                    <th>Aktif Mi?</th>
                    <th style="width:125px;"></th>

                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img style="width:125px;" src="/img/@item.Image" /></td>
                        <td>@item.Title</td>
                        <td>@item.IsActive</td>
                        <td>
                            <a href="/Posts/Edit/@item.PostId" class="btn btn-primary">Güncelle</a>
                            <a href="#" class="btn btn-danger">Sil</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>