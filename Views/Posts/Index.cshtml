@model List<Post>

<div class="row">
    
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">Popüler Gönderiler</h1>
            @foreach(var items in Model)
            {
                <div class="card bg-transparent border-0 mb-3">
                    <div class="row">
                        <div class="col-4">
                            <img src="~/img/@items.Image" class="img-fluid rounded" alt="">
                        </div>
                        <div class="col-8">
                            <h5><a href="posts/details/@items.Url" class="btn-link fw-bold">@items.Title</a></h5>
                            <p>@items.Description</p>
                            <div class="tags">

                                @foreach (var tag in items.Tags)
                                {
                                    <a href="/posts/tag/@tag.Url" class="badge bg-@tag.Color bg-opacity-10 text-@tag.Color mb-2 fw-bold">@tag.Text</a>
                                }



                            </div>  
                        </div>
                    </div>
                </div>
                <hr class="my-3"/>
            }

            <nav>
                <ul class="pagination">
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item"><a href="#" class="page-link">3</a></li>
                </ul>
            </nav>
        </div>
    </div>

    <div class="col-lg-4">
       
        <vc:tags-menu></vc:tags-menu>
        <vc:latest-posts></vc:latest-posts>

    </div>





</div>