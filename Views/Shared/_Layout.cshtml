<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogApp.styles.css" asp-append-version="true" />
</head>
<body>
        <nav class="navbar navbar-expand-lg bg-white border-bottom shadow-sm">
            <div class="container">
               <a href="/posts" class="navbar-brand">
               <i class="bi bi-code"></i> Furkan Blog   
               
               </a>

               <ul class="navbar-nav ms-auto">
                @if (User.Identity!.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a href="#" class="nav-link">@User.Identity.Name</a>
                    </li>
                    <li class="nav-item">
                        <a href="/users/logout" class="nav-link">Çıkış Yap</a>
                    </li>
                    <li class="nav-item">
                        <a href="/posts/list" class="nav-link">Postları Listele</a>
                    </li>

                }else
                {
                <li class="nav-item">
                    <a href="/users/login" class="nav-link">Giriş Yap</a>
                </li>
                <li class="nav-item">
                        <a href="/users/register" class="nav-link">Kaydol</a>
                </li>
                }


               </ul>
            </div>
        </nav>
    <div class="container mt-3">
        
            @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
