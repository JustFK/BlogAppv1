@model User

<div class="row">
    <div class="col-2">
        <div class="bg-white p-2">
            <img src="/img/@Model.Image" class="img-fluid" alt="" />
        </div>
    </div>

    <div class="col-10">
        <div class="bg-white p-2">
            <h5>@Model.Name</h5>
            <hr />
            <div id="posts">
                <h5 class="my-4">Yayınlanan Gönderiler</h5>
                <ul class="list-group">
                    @foreach(var post in @Model.Posts){
                        <li class="list-group-item"><b>Post:</b> <a href="/posts/details/@post.Url">@post.Title</a></li>
                    }
                </ul>
            </div>
            <div id="comments">
                <h5 class="my-4">Yorumlar</h5>
                <ul class="list-group">
                    @foreach(var comment in @Model.Comments){
                        <li class="list-group-item"><b>Yorum:@comment.CommentText</b> <i>[@comment.Post.Title]</i></li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>